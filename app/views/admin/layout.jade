extends ../layout

append css
    link(rel="stylesheet", href="/css/admin.css")
    link(rel="stylesheet", href="/css/easydialog.css")
    link(rel="stylesheet", href="/components/font-awesome/css/font-awesome.min.css")
append js
  script(src="/js/controller/admin.js")
  script(src="/js/controller/easydialog.js")
  block scripts

block main
  nav.navbar.navbar-inverse.navbar-fixed-top
    .navbar-header
      button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navbar", aria-expanded="false", aria-controls="navbar")
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-my-brand(href="/") 饶厚林的博客
    #navbar.navbar-collapse.collapse
      ul.nav.navbar-nav.mr-auto
        li.nav-item(class={active: (pageName === "/admin/posts/"+pageNum || pageName === "/admin/posts/add" || pageName === "/admin/categories" || pageName === "/admin/categories/add")})
          a(href="/admin/posts") 首页
        li.nav-item(class={active: pageName === "/admin/comments"})
          a(href="/admin/comments") 评论
        //- li.nav-item
        //-   a(href="#") 设置
      .navbar-form.navbar-right
      ul.nav.navbar-nav.navbar-right
        if user
          li
            if (user.authority == "admin")
              a.dropdown-toggle(href="javascript:void(0)" type="button", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false")= user.nick
                span.caret
              ul.dropdown-menu
                li
                  a(href="/user/contact") 联系我们
                li.divider(role="separator")
                li
                  a(href="/admin/password") 修改密码
                //- li.divider(role="separator")
                //- li
                //-   a#logoutuser(href="javascript:void(0)") 注销
            else
              a= user.nick
        //- li
        //-   a(href="")
        //-     i.fa.fa-question &nbsp;帮助
        li
          a(href="/admin/logout")
            i.fa.fa-lock &nbsp;注销
  .container-fluid
    .row
      .col-sm-3.col-md-2.sidebar
        block sidebar
      .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main(style="padding-left:26px;padding-right:26px;")
        block content