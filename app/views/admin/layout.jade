extends ../layout

append css
    link(rel="stylesheet", href="/css/admin.css")
    link(rel="stylesheet", href="/css/easydialog.css")
    link(rel="stylesheet", href="/components/font-awesome/css/font-awesome.min.css")
append js
  script(src="/js/controller/admin.js")
  script(src="/js/controller/easydialog.js")
  block scripts

block main
  nav.navbar.navbar-inverse.navbar-fixed-top
    .navbar-header
      button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navbar", aria-expanded="false", aria-controls="navbar")
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-my-brand(href="/admin") Project name
    #navbar.navbar-collapse.collapse
      ul.nav.navbar-nav.mr-auto
        li.nav-item.active
          a(href="/admin") 首页
        li.nav-item
          a(href="#") 评论
        li.nav-item
          a(href="#") 设置
      .navbar-form.navbar-right
      ul.nav.navbar-nav.navbar-right
        if user
          li
            a= user.nick
        li
          a(href="")
            i.fa.fa-question &nbsp;帮助
        li
          a(href="/admin/logout")
            i.fa.fa-lock &nbsp;注销
  .container-fluid
    .row
      .col-sm-3.col-md-2.sidebar
        ul.nav.nav-sidebar
          li(class={active: pageName === "/admin/posts/"+pageNum})
            a(href="/admin/posts")
              i.fa.fa-files-o &nbsp;文章列表
          li(class={active: pageName === "/admin/posts/add"})
            a(href="/admin/posts/add")
              i.fa.fa-file-o &nbsp;添加文章
          li(class={active: pageName === "/admin/categories"})
            a(href="/admin/categories")
              i.fa.fa-th-list &nbsp;分类列表
          li(class={active: pageName === "/admin/categories/add"})
            a(href="/admin/categories/add")
              i.fa.fa-plus &nbsp;添加分类
        ul.nav.nav-sidebar
          li(class={active: pageName === "/admin/users/password"})
            a(href="/admin/users/password")
              i.fa.fa-unlock-alt &nbsp;修改密码

      .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main(style="padding-left:26px;padding-right:26px;")
        block content