extends ../layout

block content
  h2.page-header 添加分类
  != messages()

  if errors && errors.length
    .errors
      each error in errors
        p.alert.alert-danger=error.msg

  form.vertical-form(method="post", action=action)
    .form-group
      label(for="name" style="font-size:18px;color:#555555") 名称
      input.form-control.input-lg(name="name", required="true", placeholder="请输入名称..." value=category.name)

    button.btn.btn-info(type="submit" style="margin-bottom: 100px; width: 160px;") 添 加